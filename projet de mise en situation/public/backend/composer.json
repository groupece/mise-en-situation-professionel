{
  "name": "docuhelp/backend",
  "description": "Backend PHP Slim pour DocuHelp (upload, indexation FTS5, recherche, chat)",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": ">=8.2",
    "slim/slim": "^4.13",
    "slim/psr7": "^1.6",
    "php-di/php-di": "^7.0",
    "php-di/slim-bridge": "^3.4",
    "vlucas/phpdotenv": "^5.6",
    "monolog/monolog": "^3.6",
    "ramsey/uuid": "^4.7",
    "smalot/pdfparser": "^2.11"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "autoload": {
    "psr-4": {
      "DocuHelp\\": "src/"
    }
  },
  "scripts": {
    "start": "php -S 127.0.0.1:8081 -t public",
    "test": "./vendor/bin/phpunit",
    "migrate": "php scripts/migrate.php"
  }
}

